
<link rel="shortcut icon" type="image/x-icon" href="pictures/wetter.jpg">
<h1>Dashboard</h1>
<hr>
<div class="container">
    <div>
        <table class="pure-table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Plattform</th>
                <th>AbfrageInterval (Stunden:Minuten)</th>
                <th>Farbe</th>
                <th>Bearbeiten</th>
            </tr>
            </thead>
            <tbody>
            {% for pl in platform %}
                <tr>
                    <td>{{ pl.plId }}</td>
                    <td>{{ pl.name }}</td>
                    <td>{{ pl.abfrageinterval|date('H:i') }}</td>
                    <td style="color:{{ pl.farbe }}">{{ pl.farbe }}</td>
                    <td>
                        <button data-id="{{ pl.plId }}" class="pure-button pure-button-primary editPlatformButton">
                            Bearbeiten
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <br>
    <div id="form_container" class="notVisible">
        <hr>
        <h2>Platform Bearbeiten</h2>
        <form id="editPlatform" class="pure-form pure-form-aligned">
            <div class="pure-control-group">
                <label for="name">Name</label>
                <input id="name" type="text" name="name" required>
                <span id="info_name" class="pure-form-message-inline errorText"></span>
            </div>
            <div class="pure-control-group">
                <label for="abfrageinterval">AbfrageInterval (Stunden:Minuten)</label>
                <input type="time" id="abfrageinterval" name="abfrageinterval" required>
                <span id="info_abfrageinterval" class="pure-form-message-inline errorText"></span>
            </div>
            <div class="pure-control-group">
                <label for="farbe">Farbe</label>
                <input id="farbe" type="text" name="farbe" required>
                <span id="info_farbe" class="pure-form-message-inline errorText"></span>
                <button id="testColor" class="pure-button pure-button-primary">Farbe Testen</button>
                <div class="testColorBox" id="testColorBox"></div>
            </div>
            <span id="info_id" class="pure-form-message-inline errorText"></span>
            <div class="pure-controls">
                <span id="info_farbe" class="pure-form-message-inline  errorText"></span>
                <span class="pure-form-message-inline">Die Farbe muss in Englisch (z.B. 'blue') oder als Hexadezimal Farbcode eingef√ºgt werden</span>
                <br><br>
                <button type="submit" class="pure-button pure-button-primary">Bearbeiten</button>
            </div>
        </form>
    </div>
</div>
{% block javascripts %}
    <script src="vendor/jquery.js"></script>
    <script src="JavaScript/editPlatform.js"></script>
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css"
          href="CSS/pure.css">
    <link rel="stylesheet" type="text/css" href="CSS/dashboard.css">
{% endblock %}